<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="{{packageName}}.dao.{{pojoName}}Dao">

    {{#if useResultMap}}<resultMap type="{{packageName}}.model.{{pojoName}}" id="{{pojoName}}Result">
        {{#columns}}{{#eq dataType 2005}}<result property="{{toJavaName name}}" column="{{name}}" jdbcType="CLOB" javaType="{{javaType}}" />{{else}}<result property="{{toJavaName name}}" column="{{name}}"/>{{/eq}}
        {{/columns}}
    </resultMap>{{/if}}

    <sql id="selectWhere">
        SELECT
             {{#columns}}{{name}}{{#unless @last}},{{/unless}}
             {{/columns}}
        FROM {{name}}
        <where>{{#columns}}
            <if test=" {{javaName}} != null {{#eq javaType.name "String"}}and {{javaName}}.trim() != ''{{/eq}} ">
                AND {{name}} = {{sharp javaName}}
            </if>{{/columns}}
        </where>
    </sql>


    <select id="_select" parameterType="Map" resultType="{{packageName}}.model.{{pojoName}}">
        <include refid="selectWhere" />
    </select>


    <select id="selectCount" parameterType="Map" resultType="int">
        <include refid="selectWhere" />
    </select>


    <insert id="_insert" parameterType="Map">
        INSERT INTO {{name}}

        <trim prefix="(" suffix=")" suffixOverrides=",">{{#columns}}
            <if test=" {{javaName}} != null {{#eq javaType.name "String"}}and {{javaName}}.trim() != ''{{/eq}} ">
                {{name}},
            </if>{{/columns}}
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">{{#columns}}
            <if test=" {{javaName}} != null {{#eq javaType.name "String"}}and {{javaName}}.trim() != ''{{/eq}} ">
                {{sharp javaName}},
            </if>{{/columns}}
        </trim>
    </insert>

    <update id="_update" parameterType="Map">
        UPDATE {{name}}
        <trim prefix="SET" suffixOverrides=",">
        {{#updates}}
            <if test=" {{javaName}} != null {{#eq javaType.name "String"}}and {{javaName}}.trim() != ''{{/eq}} ">
                {{name}} = {{sharp javaName}},
            </if>{{/updates}}
        </trim>
        WHERE
        {{#keys}}{{#unless @first}}AND {{/unless}}{{key}} = {{sharp value}}
        {{/keys}}
    </update>

    <select id="_checkIfExists" parameterType="Map" resultType="int">
        SELECT
          COUNT(1)
        FROM {{name}}
        WHERE
        {{#keys}}{{#unless @first}}AND {{/unless}}{{key}} = {{sharp value}}
        {{/keys}}
    </select>


    <delete id="_delete" parameterType="Map">
        DELETE FROM {{name}} WHERE
        {{#keys}}{{#unless @first}}AND {{/unless}}{{key}} = {{sharp value}}
        {{/keys}}
    </delete>
</mapper>
