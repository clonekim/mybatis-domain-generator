<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="{{packageName}}.dao.{{pojoName}}Dao">

    {{#if useResultMap}}<resultMap type="{{packageName}}.model.{{pojoName}}" id="{{pojoName}}Result">
        {{#columns}}{{#eq dataType 2005}}<result property="{{javaName name}}" column="{{name}}" jdbcType="CLOB" javaType="{{javaType}}" />{{else}}<result property="{{javaName name}}" column="{{name}}"/>{{/eq}}
        {{/columns}}
    </resultMap>{{/if}}

    <sql id="selectWhere">
        SELECT
             {{#columns}}{{name}}{{#unless @last}},{{/unless}}
             {{/columns}}
        FROM {{name}}
        <where>{{#columns}}
            <if test=" {{lower name}} != null {{#eq javaType "String"}}and {{lower name}}.trim() != ''{{/eq}} ">
                AND {{name}} = {{sharp name}}
            </if>{{/columns}}
        </where>
    </sql>


    <select id="_select" parameterType="Map" resultType="{{packageName}}.model.{{pojoName}}">
        <include refid="selectWhere" />
    </select>


    <select id="selectCount" parameterType="Map" resultType="int">
        <include refid="selectWhere" />
    </select>


    <insert id="_insert" parameterType="Map">
        INSERT INTO {{name}}

        <trim prefix="(" suffix=")" suffixOverrides=",">{{#columns}}
            <if test=" {{lower name}} != null {{#eq javaType "String"}}and {{lower name}}.trim() != ''{{/eq}} ">
                {{name}},
            </if>{{/columns}}
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">{{#columns}}
            <if test=" {{lower name}} != null {{#eq javaType "String"}}and {{lower name}}.trim() != ''{{/eq}} ">
                {{sharp name}},
            </if>{{/columns}}
        </trim>
    </insert>

    <update id="_update" parameterType="Map">
        UPDATE {{name}}
        <trim prefix="SET" suffixOverrides=",">
        {{#columns}}
            <if test=" {{lower name}} != null {{#eq javaType "String"}}and {{lower name}}.trim() != ''{{/eq}} ">
                {{name}} = {{sharp name}},
            </if>{{/columns}}
        </trim>
        WHERE
    </update>

    <select id="checkIfExists" parameterType="Map" resultType="int">
        SELECT
          COUNT(1)
        FROM {{name}}
        WHERE
        {{#columns}}{{#if key}}{{#unless @first}}AND {{/unless}}{{name}} = {{sharp name}}
        {{/if}}{{/columns}}
    </select>


    <delete id="_delete" parameterType="Map">
        DELETE FROM {{name}} WHERE
    </delete>
</mapper>
